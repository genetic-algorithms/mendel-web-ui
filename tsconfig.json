{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.core",
            "es2015.collection",
            "es2015.promise",
        ],
        "rootDir": "./static/typescript/src",
        "outDir": "./static/typescript/out",
        "sourceMap": false,
        "removeComments": true,

        "moduleResolution": "node",
        "types": [],

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
    },
    "files": [
        "./static/typescript/src/main.ts",
        "./static/typescript/typings/toml.d.ts",
    ],
}
